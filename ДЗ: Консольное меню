using System;

namespace proga
{
    internal class Program
    {
        static void Main(string[] args)
        {
            const string СommandText = "1";
            const string СommandRandom = "2";
            const string СommandClear = "3";
            const string СommandExit = "4";

            Console.WriteLine("Доброго времени суток, чем могу быть полезен? Вот команды, которые я могу выполнить. Введите число команды");
            Console.WriteLine("1.CommandText (Показать текст) 2.CommannndRandom (Вывести случайное число) 3.CommandClear (Очистить консоль) 4.CommandExit (Выход).");

            bool programRun = true;
            while (programRun)
            {
                Console.WriteLine("Введите название команды команды");

                string userInput = Console.ReadLine();
                switch (userInput)
                {
                    case "1":
                        Console.WriteLine("Пример вывода текста. Еxample of text output");
                        break;

                    case "2":
                        Random random = new Random();
                        int number = random.Next();
                        Console.WriteLine($"Случайное число {number}");
                        break;

                    case "3":
                        Console.Clear();
                        break;

                    case "4":
                        programRun = false;
                        Console.WriteLine("Завершение работы...");
                        break;
                }
            }
        }
    }
}
