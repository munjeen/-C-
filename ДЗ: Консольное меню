using System;

namespace proga
{
    internal class Program
    {
        static void Main(string[] args)
        {
            const string СommandOutputText = "1";
            const string СommandGenerateRandom = "2";
            const string СommandClear = "3";
            const string СommandExit = "4";

            Console.WriteLine("Доброго времени суток, чем могу быть полезен? Вот команды, которые я могу выполнить. Введите число команды");
            Console.WriteLine($"{СommandOutputText}. (Показать текст)  \n" +
                $"{СommandGenerateRandom}.(Вывести случайное число) \n{СommandClear}. (Очистить консоль) \n{СommandExit}.(Выход).");

            bool isProgramRun = true;

            while (isProgramRun)
            {
                Console.WriteLine("Введите название команды команды");

                string userInput = Console.ReadLine();

                switch (userInput)
                {
                    case СommandOutputText:
                        Console.WriteLine("Пример вывода текста. Еxample of text output");
                        break;

                    case СommandGenerateRandom:
                        Random random = new Random();
                        int number = random.Next();
                        Console.WriteLine($"Случайное число {number}");
                        break;

                    case СommandClear:
                        Console.Clear();
                        break;

                    case СommandExit:
                        isProgramRun = false;
                        Console.WriteLine("Завершение работы...");
                        break;
                }
            }
        }
    }
}
