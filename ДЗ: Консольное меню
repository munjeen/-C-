using System;

namespace proga
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string commandText = "text";
            string commandRandom = "random";
            string commandClear = "clear";
            string commandExit = "exit";
            Console.WriteLine("Доброго времени суток, чем могу быть полезен? Вот команды, которые я могу выполнить");
            Console.WriteLine("1.Text output (commandText) 2.Show a random number (commandRandom) 3.Clear the console (commandClear) 4.Exit (commandExit).");

            bool programRunning = true;
            while (programRunning)
            {
                Console.WriteLine("Введите название команды команды");
                string userInput = Console.ReadLine();
                switch (userInput)
                {
                    case "commandText":
                        Console.WriteLine("Пример вывода текста. Еxample of text output");
                        break;

                    case "commandRandom":
                        Random rnd = new Random();
                        int number = rnd.Next();
                        Console.WriteLine($"Случайное число {number}");
                        break;

                    case "commandClear":
                        Console.Clear();
                        break;

                    case "commandExit":
                        programRunning = false;
                        Console.WriteLine("Завершение работы...");
                        break;
                }
            }
        }
    }
}
