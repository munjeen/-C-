using System;

namespace proga
{
    internal class Program
    {
        static void Main(string[] args)
        {
            const string commandText = "1";
            const string commandRandom = "2";
            const string commandClear = "3";
            const string commandExit = "4";

            Console.WriteLine("Доброго времени суток, чем могу быть полезен? Вот команды, которые я могу выполнить. Введите число команды");
            Console.WriteLine("1.Text output 2.Show a random number  3.Clear the console  4.Exit.");

            bool programRun = true;
            while (programRun)
            {
                Console.WriteLine("Введите название команды команды");
                string userInput = Console.ReadLine();
                switch (userInput)
                {
                    case "commandText":
                        Console.WriteLine("Пример вывода текста. Еxample of text output");
                        break;

                    case "commandRandom":
                        Random rnd = new Random();
                        int number = rnd.Next();
                        Console.WriteLine($"Случайное число {number}");
                        break;

                    case "commandClear":
                        Console.Clear();
                        break;

                    case "commandExit":
                        programRun = false;
                        Console.WriteLine("Завершение работы...");
                        break;
                }
            }
        }
    }
}
